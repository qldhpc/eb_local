name = 'BamTools'
version = '2.4.1'

homepage = 'https://github.com/pezmaster31/bamtools'
description = """BamTools provides both a programmer's API and an 
end-user's toolkit for handling BAM files."""

toolchain = {'name': 'foss', 'version': '2016b'}

sources = ['v%(version)s.tar.gz']
source_urls = ['https://github.com/pezmaster31/bamtools/archive']

builddependencies = [('CMake', '3.6.1')]

files_to_copy = ['bin', 'lib', 'include', 'docs', 'LICENSE', 'README']

moduleclass = 'bio'
